<Window x:Class="AnnuaireClient.DetailServiceWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnnuaireClient"
        mc:Ignorable="d"
        Title="Formulaire de modification de service" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <Grid Margin="5,5,5,5">
            <Label Content="Nom" HorizontalAlignment="Left" Margin="6,0,0,0" VerticalAlignment="Top" Height="20" Padding="1" UseLayoutRounding="False"/>
            <TextBox x:Name="NameBox" HorizontalAlignment="Left" Height="30" Margin="5,16,5,0" VerticalAlignment="Top" Width="200" VerticalContentAlignment="Stretch" HorizontalContentAlignment="Stretch"/>

            <Button x:Name="DeleteServiceButton" Click="DeleteService_Click" Content="Supprimer" Margin="5,55,5,5" Height="25" VerticalAlignment="Top" HorizontalAlignment="Left" Width="90"/>
            <Button x:Name="EditServiceButton" Click="EditService_Click" Content="Enregistrer" Margin="5,55,5,5" Height="25" VerticalAlignment="Top" HorizontalAlignment="Right" Width="90"/>
        </Grid>
    </Grid>
</Window>
