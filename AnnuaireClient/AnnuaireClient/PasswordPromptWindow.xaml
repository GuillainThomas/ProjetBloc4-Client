<Window x:Class="AnnuaireClient.PasswordPromptWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AnnuaireClient"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Title="Connexion Administrateur" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Veuillez entrer le Mot de passe :"/>
            <PasswordBox Name="PasswordInput" Margin="0,5,0,10"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="OK" Width="80" Click="OkButton_Click"/>
                <Button Content="Cancel" Width="80" Click="CancelButton_Click" Margin="10,0,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
